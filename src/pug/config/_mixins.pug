mixin logo
  .logo&attributes(attributes)
    img.logo__image(src="./img/logo/logo.png")

mixin balloon
  include ../svg/balloon.svg

mixin ratingStars(fullCount)
  - var emptyCount = 5 - fullCount;
  .rating-stars&attributes(attributes)
    while fullCount > 0
      - fullCount--
      .rating-stars__item.rating-stars__item_full
        i.rating-stars__icon.icon.icon_star-full
    while emptyCount > 0
      - emptyCount--
      .rating-stars__item.rating-stars__item_empty
        i.rating-stars__icon.icon.icon_star-empty

mixin ratingStats(fullCount)
  .rating-stats&attributes(attributes)
    i.rating-stats__icon.icon.icon_cup
    .rating-stats__container
      span.rating-stats__text Более 
        b 50 
        | отзывов с оценкой 
      +ratingStars(fullCount)(class="rating-stats__rating-stars")

mixin linkButton(text, single)
  if !single
    button.button.button-more&attributes(attributes)
      i.button-more__icon.icon.icon_arrow-down
      span.button-more__text= text
      i.button-more__icon.icon.icon_arrow-down
  else
    button.button.button-more.button-more_single&attributes(attributes)
      span.button-more__text= text
      i.button-more__icon.icon.icon__arrow-down
  
