.modal.modal_hidden
  .modal__content
    h3.modal__title Бронирование
    form.form.modal__form(action="#")
      .form__group
        label.form__label Дата
          span.form__required *
        input.form__input.form__date#datetimepicker(type="text", name="date", placeholder="Дата")
      .form__group
        label.form__label Email
          span.form__required *
        input.form__input(type="email", name="email" placeholder="Электронная почта")
      .form__group
        label.form__label Имя
          span.form__required *
        input.form__input(type="text", name="name", placeholder="Имя")
      .form__group
        label.form__label Фамилия
          span.form__required *
        input.form__input(type="text", name="surname", placeholder="Фамилия")
      .form__group
        label.form__label Телефон
          span.form__required *
        input.form__input(type="tel", name="tel", placeholder="+7 (999) 123-45-67")
      .form__group.form__group_card
        label.form__label Данные карты
          span.form__required *
        input.form__input.form__card-number(type="text", name="cardNumber", placeholder="Номер карты")
        .form__card-data
          input.form__input.form__card-date(type="text", name="cardDate", placeholder="Срок действия")
          input.form__input.form__card-cvv(type="text", name="cardCVV", placeholder="CVV")
      .form__group.form__group_checkbox
        input.form__input.form__input-public#public(type="checkbox", name="public", checked="true")
        label.form__label-public(for="public") Я согласен с пользовательским соглашением и публичной офертой
      .form__group.form__group_submit
        input.form__input.form__input-submit(type="submit", name="submit", value="Забронировать")
